/* pages/deepLearn/index.wxss */

.deep_learn_container {
  width: 750rpx;
  height: auto;
  min-height: 100vh;
  background-color: #edf0f5;
  position: relative;
}

.top_image {
  width: 100%;
}

.top_image image {
  width: 100%;
  height: 380rpx;
}

.deep_learn_question, .expand {
  width: 678rpx;
  height: 356rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 3rpx 9rpx 0rpx rgba(203,203,203,0.5);
  border-radius: 10rpx;
  position: absolute;
  top: 138rpx;
  left: 36rpx;
}

.deep_learn_question_top,.expand_top {
  font-size: 26rpx;
  color: #808080;
  letter-spacing: 2rpx;
  padding: 28rpx;
}

.deep_learn_line {
  width: 681rpx;
  height: 1rpx;
  background: #DADADA;
}

.deep_learn_question_content {
  width: 90%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 5%;
}

.question_content_item,.expand_content_item {
  padding: 38rpx 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  text-align: center;
}

.question_img {
  width: 120rpx;
  height: 120rpx;
}

.question_content_item text {
  font-size: 34rpx;
  color: #333333;
  margin-top: 10rpx;
  line-height: 64rpx;
}

.expand {
  height: auto;
  top: 528rpx;
}

.expand_content {
  padding: 20rpx 20rpx;
  display: flex;
  justify-content: start;
  flex-wrap: wrap;
}

.expand_img {
  width: 58rpx;
  height: 58rpx;
}

.expand_content_item {
  width: 25%;
  padding: 0;
  padding: 20rpx 0;
}

.expand_content_item text {
  font-size: 24rpx;
  color: #999999;
  margin-top: 22rpx;
}