/* pages/recite/index.wxss */

.recite_container {
  height: 100vh;
  background-color: #EDF5F1;
  padding: 98rpx 78rpx ;
  position: relative;
}

.van-cell {
  height: 60vh;
  border: rgba(88, 214, 133, 1) solid 4rpx;
  border-radius: 10rpx;
}

.loading_container {
  width: 136rpx;
  height: 136rpx;
  border-radius: 50%;
  background-color: rgba(88, 214, 133, 0.5);
  margin: 0 auto;
  position: relative;
  margin-top: 100rpx;
}

.loading_circle {
  width: 60rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgba(88, 214, 133, 1);
  position: absolute;
  top: 18rpx;
  left: 18rpx;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.loading_slip {
  width: 6rpx;
  height: 60%;
  background-color: #ffffff;
  border-radius: 3rpx;
}

.loading_slip_animation {
  animation: loading 1.5s ease 0s infinite;
}

@keyframes loading {
  0% {
    height: 20%;
  }
  50% {
    height: 60%;
  }
  100% {
    height: 20%;
  }
 }

 .loading_circle .loading_slip:nth-child(1), .loading_circle .loading_slip:nth-child(5){
   height: 20%;
   animation-delay: 1s;
 }

 .loading_circle .loading_slip:nth-child(2), .loading_circle .loading_slip:nth-child(4){
   height: 40%;
  animation-delay: 0.5s;
}

.recite_btn {
  position: fixed;
  bottom: 80rpx;
  width: 80%;
}

.van-button__text {
  font-size: 40rpx;
  letter-spacing: 2rpx;
}
 